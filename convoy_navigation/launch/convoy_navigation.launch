<launch>
    <param name="use_sim_time" value="true" />
    <arg name="open_rviz" default="true" />
    <arg name="map_file" default="$(find convoy_navigation)/maps/office/office.yaml" />

    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
        <param name="frame_id" value="map" />
    </node>

    <include file="$(find convoy_navigation)/launch/amcl1.launch" />
    <include file="$(find convoy_navigation)/launch/amcl2.launch" />

    <include file="$(find convoy_navigation)/launch/move_base1.launch">
    </include>
    <include file="$(find convoy_navigation)/launch/move_base2.launch">
    </include>

    <!-- <group if="$(arg open_rviz)">
        <node pkg="rviz" type="rviz" name="rviz" required="true"
            args="-d $(find convoy_navigation)/rviz/Multi_convoy_navigation.rviz" />
    </group> -->
</launch>
    